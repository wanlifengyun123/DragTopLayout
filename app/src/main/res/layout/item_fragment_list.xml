<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/custom_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="15dp"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                 />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/img_icon"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/shop_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img_icon"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    tools:text="我是21号店" />

                <TextView
                    android:id="@+id/shop_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/shop_name"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/img_icon"
                    android:textSize="12sp"
                    tools:text="促销多多，赶快来买，多买多送123565555522" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_gravity="right|bottom">

            <TextView
                android:id="@+id/shop_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_blue"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:gravity="right"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="zhuanti" />

            <TextView
                android:id="@+id/shop_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="right"
                android:textSize="12sp"
                tools:text="yuedushu" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/custom_item_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@color/white"
        android:visibility="gone">

        <TextView
            android:id="@+id/shop_name_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            tools:text="我是21号店" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_photo"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

        <TextView
            android:id="@+id/shop_info_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            tools:text="促销多多，赶快来买，多买多送123565555522" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/shop_flag_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_blue"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:gravity="right"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="zhuanti" />

            <TextView
                android:id="@+id/shop_count_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="right"
                android:textSize="12sp"
                tools:text="yuedushu" />
        </LinearLayout>

    </LinearLayout>


</FrameLayout>